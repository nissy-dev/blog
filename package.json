{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "generate-assets": "pnpm --filter @blog/assets-generator generate",
    "analyze": "pnpm --filter @blog/frontend analyze",
    "build": "pnpm -r @blog/frontend build",
    "start": "pnpm --filter @blog/frontend start",
    "dev": "pnpm --filter @blog/frontend dev",
    "lint": "biome ci",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "typescript": "5.5.2"
  }
}
