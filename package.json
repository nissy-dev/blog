{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install chromium",
    "prepare": "git config --local core.hooksPath .githooks",
    "dev": "next dev",
    "build": "npm run build:static && npm run build:next",
    "build:next": "next build",
    "build:static": "ts-node -P tsconfig.script.json scripts/generateStaticFiles.tsx",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:css": "stylelint **/*.tsx",
    "fix": "run-s fix:prettier fix:eslint fix:css",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:css": "npm run lint:css -- --fix",
    "post": "scaffdog generate new-post",
    "bundle-analyzer": "ANALYZE=true next build"
  },
  "dependencies": {
    "@docsearch/react": "3.5.2",
    "@emotion/react": "11.11.1",
    "@react-icons/all-files": "4.1.0",
    "budoux": "0.6.2",
    "feed": "4.2.2",
    "github-markdown-css": "5.5.1",
    "highlight.js": "11.9.0",
    "next": "13.4.7",
    "next-themes": "0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "the-new-css-reset": "1.11.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "13.3.4",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@types/gtag.js": "0.0.19",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "gray-matter": "4.0.3",
    "hastscript": "7.2.0",
    "lint-staged": "13.3.0",
    "markdown-toc": "1.2.0",
    "npm-run-all2": "5.0.2",
    "open-graph-scraper": "5.2.3",
    "playwright": "1.38.1",
    "prettier": "2.8.8",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "6.1.1",
    "rehype-highlight": "6.0.0",
    "rehype-slug": "5.1.0",
    "rehype-stringify": "9.0.4",
    "remark": "15.0.1",
    "remark-gfm": "4.0.0",
    "remark-rehype": "11.1.0",
    "scaffdog": "2.5.0",
    "strip-markdown": "6.0.0",
    "stylelint": "15.11.0",
    "stylelint-config-recess-order": "4.6.0",
    "stylelint-config-recommended": "11.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  }
}
