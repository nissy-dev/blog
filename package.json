{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install chromium",
    "prepare": "git config --local core.hooksPath .githooks",
    "dev": "next dev",
    "build": "npm run build:static && npm run build:next",
    "build:next": "next build",
    "build:static": "ts-node -P tsconfig.script.json scripts/generateStaticFiles.tsx",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:css": "stylelint **/*.tsx",
    "fix": "run-s fix:prettier fix:eslint fix:css",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:css": "npm run lint:css -- --fix",
    "post": "scaffdog generate new-post",
    "bundle-analyzer": "ANALYZE=true next build"
  },
  "dependencies": {
    "@emotion/react": "11.11.4",
    "@react-icons/all-files": "4.1.0",
    "budoux": "0.6.2",
    "feed": "4.2.2",
    "github-markdown-css": "5.6.1",
    "highlight.js": "11.9.0",
    "next": "14.2.4",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "the-new-css-reset": "1.11.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "14.2.4",
    "@stylelint/postcss-css-in-js": "0.38.0",
    "@types/gtag.js": "0.0.20",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.13.1",
    "@typescript-eslint/parser": "7.13.1",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-react": "7.34.3",
    "gray-matter": "4.0.3",
    "hastscript": "9.0.0",
    "lint-staged": "15.2.7",
    "markdown-toc": "1.2.0",
    "npm-run-all2": "6.2.0",
    "open-graph-scraper": "6.5.2",
    "playwright": "1.44.1",
    "prettier": "3.3.2",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-highlight": "7.0.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.0",
    "remark-rehype": "11.1.0",
    "scaffdog": "4.0.0",
    "strip-markdown": "6.0.0",
    "stylelint": "16.6.1",
    "stylelint-config-recess-order": "5.0.1",
    "stylelint-config-recommended": "14.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.5.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  }
}
