{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install",
    "prepare": "git config --local core.hooksPath .githooks",
    "dev": "next dev",
    "build": "npm run build:static && npm run build:next",
    "build:next": "next build",
    "build:static": "ts-node -P tsconfig.script.json scripts/generateStaticFiles.tsx",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:css": "stylelint **/*.tsx",
    "fix": "run-s fix:prettier fix:eslint fix:css",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:css": "npm run lint:css -- --fix",
    "post": "scaffdog generate new-post",
    "bundle-analyzer": "ANALYZE=true next build"
  },
  "dependencies": {
    "@docsearch/react": "^3.5.1",
    "@emotion/react": "^11.11.1",
    "@react-icons/all-files": "^4.1.0",
    "budoux": "^0.5.1",
    "feed": "^4.2.2",
    "github-markdown-css": "^5.2.0",
    "highlight.js": "^11.8.0",
    "next": "^13.4.7",
    "next-themes": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "the-new-css-reset": "^1.9.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.3.4",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/gtag.js": "^0.0.10",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint-config-next": "^13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.2.0",
    "lint-staged": "^13.2.3",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "open-graph-scraper": "^5.2.3",
    "playwright": "^1.33.0",
    "prettier": "^3.0.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-highlight": "^6.0.0",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-rehype": "^10.1.0",
    "scaffdog": "^2.5.0",
    "strip-markdown": "^5.0.0",
    "stylelint": "^15.9.0",
    "stylelint-config-recess-order": "^4.2.0",
    "stylelint-config-recommended": "^11.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  }
}
