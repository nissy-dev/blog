{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "npx playwright install",
    "prepare": "git config --local core.hooksPath .githooks",
    "dev": "next dev",
    "build": "npm run build:static && npm run build:next",
    "build:next": "next build",
    "build:static": "ts-node -P tsconfig.script.json scripts/generateStaticFiles.tsx",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:css": "stylelint **/*.tsx",
    "fix": "run-s fix:prettier fix:eslint fix:css",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:css": "npm run lint:css -- --fix",
    "post": "scaffdog generate new-post",
    "bundle-analyzer": "ANALYZE=true next build"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.5.3",
    "@docsearch/react": "^3.0.0",
    "@emotion/react": "^11.9.0",
    "@react-icons/all-files": "^4.1.0",
    "budoux": "^0.1.0",
    "feed": "^4.2.2",
    "github-markdown-css": "^5.1.0",
    "highlight.js": "^11.5.1",
    "next": "^12.1.6",
    "next-pwa": "^5.5.0",
    "next-themes": "^0.1.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "the-new-css-reset": "^1.6.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.9.2",
    "@next/bundle-analyzer": "^12.1.6",
    "@stylelint/postcss-css-in-js": "^0.37.3",
    "@types/gtag.js": "^0.0.10",
    "@types/lodash.truncate": "^4.4.7",
    "@types/open-graph-scraper": "^4.8.1",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "lint-staged": "^12.4.1",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "open-graph-scraper": "^4.11.0",
    "playwright": "^1.21.1",
    "prettier": "^2.6.2",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-highlight": "^5.0.2",
    "rehype-slug": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "remark-rehype": "^10.1.0",
    "scaffdog": "^1.2.0",
    "strip-markdown": "^5.0.0",
    "stylelint": "^14.8.1",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended": "^7.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ]
  }
}
